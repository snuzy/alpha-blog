<h1 align="center">Alpha Blog complete listing</h1>
  
   <% @articles.each do |blogitem| %> 
   <div class="row">
     <div class="col-xs-8 col-xs-offset-2">
        <div class="well well-lg">
            <div class="article-title">
               <%= link_to blogitem.title, article_path(blogitem) %>                               
            </div>
           <div class="article-body">
             <%= truncate(blogitem.description, length: 100) %>
           </div>
           <div class="article-actions">
              <%= link_to "Edit this article", edit_article_path(blogitem), class: "btn btn-xs btn-primary" %>
              <%= link_to "Delete this article", article_path(blogitem), method: :delete,
                                         data: {confirm: "Are you sure you want to delete this article?"},
                                         class: "btn btn-xs btn-danger"%>
          </div>
        </div>
     </div>
    </div>
  <% end %>                              
